// Reset

reset-base()
  padding: 0;
  margin: 0;
  font: inherit;
  color: inherit;
  background: transparent;
  border: none;

reset-cursor()
  cursor: pointer;
  user-select: none;

reset-box-model()
  box-sizing: border-box;
  background-clip: padding-box;

inline-block()
  position: relative;
  display: inline-block;
  vertical-align: top;

ellipsis()
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;

disabled()
  opacity: 0.3;
  cursor: default;
  pointer-events: none;

